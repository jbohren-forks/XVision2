PROG		= showdv
CUR_DEPTH	= ../../../
CPPFLAGS	= @BTTV_HEAD@ @X_CFLAGS@\
		  -I/usr/src/linux-2.4/drivers/ieee1394\
                  -I$(CUR_DEPTH)/include -g -DSCREEN_DEPTH=$(SD) \
		  $(shell glib-config --cflags) -I../../drivers/libdv

OBJS		=  main.o
LIBS		= -L$(CUR_DEPTH)/lib -lXVDevs -lXVImages -lXVCons -lXVTools -lmpeg\
		  -ldv @DVFIRE_LIB@ -lglib\
		  @X_LIBS@ @LIBS@ @LIBPTH@ @X_EXTRA_LIBS@

# if you want to set the screen depth explicitly,
# do it here.  Otherwise, the depth of the screen 
# used to compile XVision2 (the screen you type "make" in)
# will be determined and used.
SD = $(shell $(CUR_DEPTH)/bin/screendepth)

all: .depend $(OBJS)
	$(CXX) -gp -o $(PROG) $(OBJS) $(LIBS) -lm

clean: ;	rm -f *.o
		rm -f $(PROG) .depend

.depend: $(OBJS:.o=.cc)
	$(CC) -M  $(CPPFLAGS) $(OBJS:.o=.cc) > .depend

install: all
	install -c $(PROG) $(CUR_DEPTH)/bin

include .depend
