template <class T>
void vid_correct_color(XVImageRGB<T> &dest, u_char *source)
{
  u_char *i_ter=source;
  XVImageWIterator<T>      o_iter(dest);

    for(;!o_iter.end();++o_iter)
    {
      (*o_iter).setR(*i_ter++);
      (*o_iter).setG(*i_ter++);
      (*o_iter).setB(*i_ter++);
      i_ter++;
    }

}
